!.config/fastfetch/**
!.config/ghostty/
!.config/ghostty/**
!.config/karabiner/
!.config/karabiner/**
!.config/nvim/
!.config/nvim/**
!.config/tmux/
!.config/tmux/**
   
# Include scripts 
!scripts/
!scripts/**
